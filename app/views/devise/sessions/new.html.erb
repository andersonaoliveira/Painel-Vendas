<div class='ls-login-parent'>
  <div class='ls-login-inner'>
    <div class='ls-login-container'>
      <div class='login-box'>

        <h1 class="logo-login">
        <a href="#" class="ls-ico-earth">
          <small>Campus Code</small>
          Vendas
        </a>
        </h1>

        <h2>Log in</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'ls form ls-login-form'}) do |f| %>
          <div class="field">
            <%= f.label :email, class: 'ls-label' %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'ls-login-bg-email' %>
          </div>

          <div class="field">
            <%= f.label :password, class: 'ls-label' %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: 'ls-login-bg-password' %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field remember">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "Log in", class: 'ls-btn ls-btn-primary ls-btn-ls' %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
